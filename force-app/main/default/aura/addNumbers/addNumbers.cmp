<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" 
                access="global" >
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
    		<header class="slds-media slds-media_center slds-has-flexi-truncate">
        		<div class="slds-media__figure">   
                     <lightning:icon iconName="standard:account" alternativeText="Account" title="Account" />
        		</div>
                
        		<div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                    	<a href="#" class="slds-card__header-link slds-truncate" title="Accounts">
                    		<span>Calculator without Attribute</span>
                        </a>
                    </h2>
                </div>
                
        		<div class="slds-no-flex">
        			<button class="slds-button slds-button_neutral" onclick="{!c.addition}">SUM</button>
        		</div>
        	</header>
    	</div>
        <div class="slds-card__body slds-card__body_inner">
        	<div class="row">
                <lightning:input type="number" name="input1" aura:id="fnum" label="Enter First number" placeholder="first number..."/>
                <lightning:input type="number" name="input2" aura:id="snum" label="Enter Second number" placeholder="second number"/>
                <lightning:input type="number" name="input3" aura:id="resultid" label="Result" placeholder="result" disabled="true"/>
    		</div>
        </div>
        <footer class="slds-card__footer">
            
        </footer>
    </article>
    
    
